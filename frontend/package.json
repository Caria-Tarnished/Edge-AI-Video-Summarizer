{
  "name": "edge-video-agent-frontend",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "stage-backend": "powershell -NoProfile -ExecutionPolicy Bypass -File ..\\scripts\\stage_backend_for_frontend.ps1",
    "pack": "npm run stage-backend && npm run build && electron-builder --dir",
    "dist": "npm run stage-backend && npm run build && electron-builder",
    "preview": "electron-vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "build": {
    "appId": "com.caria.edgeVideoAgent",
    "productName": "Edge Video Agent",
    "directories": {
      "output": "../release"
    },
    "files": [
      "dist/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "electron": "^32.2.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  }
}
